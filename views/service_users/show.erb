  <a href="/service_users/<%=@service_user.id%>/edit">EDIT</a>

  <a href="/service_users/show_search_options?service_user_id=<%=@service_user.id()%>">SEARCH FOR A WORKER</a>

  <form action="/service_users/<%=@service_user.id%>/delete" method="POST">
    <input type="submit" value="DELETE">
